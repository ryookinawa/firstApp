    $(function() {
      $('.btn').click(function(){
       var cmd = $(this).data('cmd');

        $.ajax({
          url: '/'+ cmd ,
          type: 'GET',
          success: function(msg) {
            //alert('success!!'); 
            alert(msg); 
          },
          error: function(XMLHttpRequest, textStatus, errorThrown){
            alert(XMLHttpRequest.status + ";" + XMLHttpRequest.statusText);
          }
        })
      });
    });

    </script>

  </head>
  <body>
  <div id="wrapper">

   <header>
    <div class="header">
     <%= title %>
    </div>
   </header>

    <hr noshade size="3">

     <nav>
	<div class="nav-zero">
		<ul>
			<li id="TV1" class="btn" data-cmd="tv_power_1">TV<br />ON/OFF</li> 
			<li id="LIGHT1" class="btn" data-cmd="light_power_on">Light<br />ON</li> 
			<li id="LIGHT1" class="btn" data-cmd="light_power_off">Light<br />OFF</li> 
                </ul>
	</div>
     </nav>
  </div>
  </body>
</html>
